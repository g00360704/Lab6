{
  // Name of the project/application
  "name": "mybook-app",

  // Version of the project/application
  "version": "0.1.0",

  // Indicates that this project is private and should not be published to a public registry
  "private": true,

  // List of project dependencies and their versions
  "dependencies": {
    "@testing-library/jest-dom": "^5.17.0", // Jest DOM testing library for React
    "@testing-library/react": "^13.4.0",    // React testing library
    "@testing-library/user-event": "^13.5.0", // User event library for React testing
    "axios": "^1.5.1",         // Axios library for making HTTP requests
    "body-parser": "^1.20.2", // Middleware for parsing HTTP request bodies
    "bootstrap": "^5.3.2",    // Bootstrap CSS framework
    "cors": "^2.8.5",         // Middleware for handling Cross-Origin Resource Sharing (CORS)
    "express": "^4.18.2",     // Express.js framework for building web applications
    "react": "^18.2.0",       // React library
    "react-bootstrap": "^2.9.0", // React components for Bootstrap
    "react-dom": "^18.2.0",   // React DOM rendering library
    "react-router-dom": "^6.16.0", // React router for handling routing in web applications
    "react-scripts": "5.0.1", // Scripts for building and running React applications
    "web-vitals": "^2.1.4"    // Library for measuring web performance metrics
  },

  // Define custom scripts to run various tasks
  "scripts": {
    "start": "react-scripts start", // Start the development server
    "build": "react-scripts build", // Build the production-ready application
    "test": "react-scripts test",   // Run tests using Jest
    "eject": "react-scripts eject"  // Eject configuration for more control over the setup
  },

  // ESLint configuration for code linting
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },

  // Browserslist configuration for specifying browser compatibility
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
